@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Universal Styling */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #83a4d4, #b6fbff);
    }

    /* Container */
    .homepage-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    /* Title & Description */
    .homepage-container h1 {
        font-weight: 600;
        margin-bottom: 25px;
        color: #2c3e50;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        transform: scale(1);
        transition: transform 0.3s ease;
    }

    .homepage-container h1:hover {
        transform: scale(1.05);
    }

    .homepage-container p {
        font-size: 1.25em;
        color: #34495e;
        margin-bottom: 20px;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        max-width: 80%;
        text-align: center;
    }

    /* Links & Buttons */
    .homepage-container a {
        color: #e74c3c;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 25px;
    }

    .homepage-container a.btn {
        background-color: #e74c3c;
        color: white;
        border: none;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
    }

    .homepage-container a.btn:hover {
        background-color: #c0392b;
        box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.2);
        transform: translateY(-3px);
    }

    /* Floating Shapes for Modern Look */
    .circle {
        position: absolute;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.07);
        animation: animateCircle infinite 15s linear;
    }

    .circle:nth-child(1) {
        top: 5%;
        left: 10%;
        width: 80px;
        height: 80px;
    }

    .circle:nth-child(2) {
        bottom: 5%;
        right: 10%;
        width: 150px;
        height: 150px;
    }

    @@keyframes animateCircle {
        0% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-20px);
        }
        100% {
            transform: translateY(0px);
        }
    }
</style>

<div class="homepage-container">
    <!-- Floating Shapes -->
    <div class="circle"></div>
    <div class="circle"></div>

    <!-- Content -->
    <h1 class="display-4">Welcome</h1>
    <p>Discover the future of web development. Learn about<a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <a href="https://learn.microsoft.com/aspnet/core" class="btn">Get Started</a>
</div>

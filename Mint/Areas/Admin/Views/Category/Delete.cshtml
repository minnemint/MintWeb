@{
    ViewData["Title"] = "Delete";
}

<style>
    .modern-input {
        border-radius: 5px;
        background: linear-gradient(120deg, #f6f9fc, #eef1f5);
        border: 1px solid #d3d9df;
        box-shadow: 0 4px 6px rgba(50, 50, 93, 0.11);
    }

    .modern-btn {
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .modern-btn:hover {
            transform: translateY(-3px);
        }

    .delete-btn {
        background: linear-gradient(135deg, #ff7675 0%, #d62d20 100%);
        border: none;
        color: white;
    }

        .delete-btn:hover {
            background: #d62d20;
        }
</style>

@model Category

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-5 mt-4 shadow-lg rounded">
        <div class="row mb-4">
            <h2 class="text-primary">Delete Category</h2>
            <hr class="w-100" />
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <label asp-for="Name">Category Name</label>
                <input asp-for="Name" type="text" disabled class="form-control modern-input" />
            </div>
            <div class="col-md-6">
                <label asp-for="DisplayOrder">Justice Order</label>
                <input asp-for="DisplayOrder" type="text" disabled class="form-control modern-input" />
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6 mb-2">
                <button type="submit" class="btn form-control modern-btn delete-btn">Delete</button>
                <a href="url_to_delete" onclick="return confirm('Are you sure you want to delete this item?');" class="d-block text-center mt-2">Test popup Delete</a>
            </div>
            <div class="col-md-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control modern-btn" style="border: 1px solid #606060;">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
